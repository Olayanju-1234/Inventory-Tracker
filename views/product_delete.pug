extends layout

block content
  h1 #{title}: #{product.product_name}

  if product_instances.length 
     p #[strong Delete the following instances before attempting to delete this product.]

      div(style='margin-left:20px;margin-top:20px')

        h4 Instances

        dl
        each instance in product_instances
          dt
            a(href=product.url) #{product.product_name}
          dd #{instance.status}


  else
    p Do you really want to delete this product?

    form(method='POST' action='')
      div.form-group
        input#productid.form-control(type='hidden',name='productid', required='true', value=product._id )
        
      button.btn.btn-primary(type='submit') Delete      
      



