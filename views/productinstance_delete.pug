extends layout

block content

  h1= title
  
  p #[strong Do you really want to delete this Instance?]
  
  div(style="margin-left:20px")

    p #[strong ID]: #{productinstance._id}
  
    p #[strong Name:] 
      a(href=productinstance.product.url) #{productinstance.product.product_name}

    p #[strong Status:] 
      if productinstance.status=='Available'
        span.text-success #{productinstance.status}
      else if productinstance.status=='Out of stock'
        span.text-danger #{productinstance.status}
      else
        span.text-warning #{productinstance.status} 
      
    if productinstance.status!='Available'
      p #[strong Check back:] #{productinstance.check_back_formatted}

  form(method='POST' action='')
    div.form-group
      input#id.form-control(type='hidden',name='id', required='true', value=productinstance._id )

    button.btn.btn-primary(type='submit') Delete