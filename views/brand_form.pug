extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='brand_name') Brand:
      input#name.form-control(type='text', placeholder='Nike, Samsung, Adidas' name='brand_name' value=(undefined===brand ? '' : brand.brand_name))
      label(for='brand_desc') Brand Description:
      input#name.form-control(type='message', placeholder='Your brand motto' name='brand_desc' value=(undefined===brand ? '' : brand.brand_desc))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
